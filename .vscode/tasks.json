{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build Full Project",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",

                "main.cpp",
                "Income.cpp",
                "Expense.cpp",
                "Income_Sources.cpp",
                "Expense_categories.cpp",
                "Wallets.cpp",
                "Recurring_Transactions.cpp",
                "Statistics.cpp",
                "loaddata.cpp",
                "Savedata.cpp",

                "-o",
                "${fileDirname}\\program.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Builds the entire project instead of only the active file."
        }
    ]
}
