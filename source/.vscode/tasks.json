{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "command": "g++",
      "args": [
        "-Wall", "-Wextra", "-pedantic",
        "-g",

        "main.cpp",
        "Income.cpp",
        "Expense.cpp",
        "Income_Sources.cpp",
        "Expense_categories.cpp",
        "Wallets.cpp",
        "Recurring_Transactions.cpp",
        "Statistics.cpp",
        "loaddata.cpp",
        "Savedata.cpp",

        "-o", "${workspaceFolder}/program.exe"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
